<div class="container">
  <div class="row">
    <div class="col-12">
      <h2>Editing Book</h2>
      <% if @book.errors.any? %>
  <strong><%= @book.errors.count %> errors prohibited this obj from being saved:</strong>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
      <div class="form">
      <%= form_with model: @book do |f| %>
      <div class="form-group">
  <h4>Title</h4>
  <%= f.text_field :title, autofocus: true, placeholder:""%>
  </div>
  <div class="form-group">
  <h4>Opinion</h4>
  <%= f.text_area :body, autofocus: true, placeholder:""%>
  </div>

  <%= f.submit 'Update Book', class: "btn btn-success mt-2" %>
<% end %>
      </div>
      <%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>
    </div>
  </div>
</div>